<h1>新規ユーザー登録</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>

  <%= f.label :お名前 %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :パスワード %>
  <%= f.password_field :password %>

  <%= f.label :パスワード（再入力） %>
  <%= f.password_field :password_confirmation %>
  
  <br><br>
  <%=f.label :image,"ユーザーアイコン画像" %>
  <%= f.file_field :image %>
  
  <br>
  
  <button type="f.submit" class="btn btn-default btn-sm">新規登録</button>
<% end %>