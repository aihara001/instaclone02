<h1>詳細画面</h1>

<p>内容: <%= @instaclo.content %></p>

<% unless @instaclo.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(instaclo_id: @instaclo.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>